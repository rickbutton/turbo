{
  "name": "jug",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "watch": "lerna run build && lerna run --stream --parallel compile-watch",
    "lint": "lerna run lint",
    "test": "jest",
    "test-watch": "jest --watch",
    "create-pkg": "yo ./packages/generator-jug-package"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/generator-jug-package/"
    ],
    "testMatch": [
      "**/src/**/(*.)(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "ts-jest": "^24.1.0",
    "yo": "^3.1.0"
  }
}
