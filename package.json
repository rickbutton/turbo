{
  "name": "jug",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "watch": "lerna run --stream --parallel watch",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/lib/**/(*.)(spec|test).js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "ts-jest": "^24.1.0",
    "yo": "^3.1.0"
  }
}
