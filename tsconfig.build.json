{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "esnext",
    "lib": ["esnext"],
    "jsx": "react",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "turbo.config.js"
  ]
}
